# Database
# PostgreSQL (production)
DATABASE_URL=postgresql+asyncpg://quipflip:quipflip@localhost:5432/quipflip

# SQLite (development/testing fallback)
# DATABASE_URL=sqlite+aiosqlite:///./quipflip.db

# Redis (optional, falls back to in-memory if not set)
REDIS_URL=redis://localhost:6379

# Application
ENVIRONMENT=development
SECRET_KEY=your-secret-key-change-in-production

# Phrase validation worker
PHRASE_VALIDATOR_URL=http://localhost:9000
