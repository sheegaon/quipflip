{
  "meta": {
    "name": "Quipflip Brand Tokens",
    "version": "2.1.0",
    "updated": "2025-11-12",
    "notes": "Colors synced 1:1 with tailwind.config.js; added quest-category colors and aliases."
  },

  "aliases": {
    "tailwind": {
      "quip-turquoise": "#10B4A4",
      "quip-teal": "#0A5852",
      "quip-teal-light": "#E8F5F4",
      "quip-orange": "#FF9A3D",
      "quip-orange-deep": "#E26A00",
      "quip-cream": "#FFF6EE",
      "quip-warm-ivory": "#FFF9F2",
      "quip-navy": "#0B2137",
      "quest-streak": "#FF9A3D",
      "quest-quality": "#FF6B6B",
      "quest-quality-dark": "#D64545",
      "quest-quality-light": "#FF8A8A",
      "quest-milestone": "#FFC857",
      "quest-milestone-dark": "#C88200",
      "quest-milestone-light": "#FFB347"
    }
  },

  "palette": {
    "teal":   {
      "50":  "#E8F5F4",
      "100": "#D6EFEC",
      "200": "#BDE7E2",
      "300": "#88D6CB",
      "400": "#50C6B6",
      "500": "#10B4A4",
      "600": "#0FA092",
      "700": "#0A5852",
      "800": "#084742",
      "900": "#063A36"
    },
    "gold":   {
      "50":  "#FFF5DC",
      "100": "#FFE9B1",
      "200": "#FFDF8A",
      "300": "#FFD56B",
      "400": "#FFCD5D",
      "500": "#FFC857",
      "600": "#E6B34E",
      "700": "#C88200",
      "800": "#A87000",
      "900": "#7F5400"
    },
    "orange": {
      "50":  "#FFF0E6",
      "100": "#FFD9BF",
      "200": "#FFC299",
      "300": "#FFB073",
      "400": "#FF9A3D",
      "500": "#FF9A3D",
      "600": "#E26A00",
      "700": "#C15900",
      "800": "#8F4300",
      "900": "#6B3300"
    },
    "ivory":  {
      "40": "#FFF9F2",
      "50": "#FFF6EE",
      "100": "#FFF0E2"
    },
    "ink":    {
      "900": "#0B2137",
      "800": "#12314E",
      "700": "#1E4465"
    },
    "quality": {
      "light": "#FF8A8A",
      "base":  "#FF6B6B",
      "dark":  "#D64545"
    }
  },

  "surface": {
    "background": { "light": "{palette.ivory.40}", "dark": "{palette.ink.900}" },
    "tile":       { "light": "{palette.teal.50}",  "dark": "{palette.ink.800}" },
    "panel":      { "light": "{palette.ivory.50}", "dark": "#0F2A41" },
    "elevations": {
      "tile":   "0 12px 24px rgba(11,33,55,0.18)",
      "tileSm": "0 4px 12px rgba(11,33,55,0.12)",
      "e1":     "0 1px 2px rgba(0,0,0,0.08)",
      "e2":     "0 2px 6px rgba(0,0,0,0.10)",
      "e3":     "0 6px 18px rgba(0,0,0,0.12)"
    },
    "radius": { "tile": 20, "card": 12, "chip": 8 }
  },

  "text": {
    "primary":   { "light": "{palette.ink.900}", "dark": "#FFFFFF" },
    "secondary": { "light": "#35516D",           "dark": "#E9EEF3" },
    "onTeal":    { "light": "#FFFFFF",           "dark": "#FFFFFF" },
    "onGold":    { "light": "{palette.ink.900}", "dark": "{palette.ink.900}" }
  },

  "state": {
    "success":  { "fill": "{palette.teal.500}",   "stroke": "{palette.teal.700}" },
    "warning":  { "fill": "{palette.gold.500}",   "stroke": "{palette.gold.700}" },
    "error":    { "fill": "{palette.orange.600}", "stroke": "{palette.orange.700}" },
    "info":     { "fill": "{palette.teal.400}",   "stroke": "{palette.teal.700}" }
  },

  "icon": {
    "size": { "xs": 12, "sm": 16, "md": 20, "lg": 24 },
    "strokeWidth": { "thin": 1, "regular": 1.5, "bold": 2 },
    "color": {
      "primary":    "{palette.teal.500}",
      "accent":     "{palette.gold.500}",
      "notice":     "{palette.orange.600}",
      "onLight":    "{palette.ink.900}",
      "onDark":     "#FFFFFF"
    }
  },

  "semantics": {
    "button": {
      "primary":     { "bg": "{palette.teal.500}", "text": "#FFFFFF", "hoverBg": "{palette.teal.600}" },
      "secondary":   { "bg": "{palette.ivory.50}", "text": "{palette.teal.700}", "hoverBg": "{palette.teal.50}" },
      "destructive": { "bg": "{palette.orange.600}", "text": "#FFFFFF", "hoverBg": "{palette.orange.700}" }
    },
    "chip": {
      "info":    { "bg": "{palette.teal.50}",   "text": "{palette.teal.700}" },
      "warning": { "bg": "{palette.gold.50}",   "text": "{palette.ink.900}" },
      "error":   { "bg": "{palette.orange.50}", "text": "{palette.orange.700}" }
    },
    "quest": {
      "streak":    { "fill": "{aliases.tailwind.quest-streak}" },
      "quality":   { "fill": "{palette.quality.base}", "light": "{palette.quality.light}", "dark": "{palette.quality.dark}" },
      "milestone": { "fill": "{palette.gold.500}", "light": "{aliases.tailwind.quest-milestone-light}", "dark": "{aliases.tailwind.quest-milestone-dark}" }
    }
  },

  "usage": {
    "lightMode": {
      "icon.default.stroke": "{icon.color.onLight}",
      "icon.default.fill":   "transparent",
      "icon.brand.fill":     "{icon.color.primary}"
    },
    "darkMode": {
      "icon.default.stroke": "{icon.color.onDark}",
      "icon.default.fill":   "transparent",
      "icon.brand.fill":     "{icon.color.primary}"
    }
  }
}
