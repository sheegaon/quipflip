{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@crowdcraft/api/*": ["../crowdcraft/src/api/*"],
      "@crowdcraft/utils": ["../crowdcraft/src/utils/index.ts"],
      "@crowdcraft/utils/*": ["../crowdcraft/src/utils/*"],
      "@crowdcraft": ["../crowdcraft/src/index.ts"],
      "@crowdcraft/*": ["../crowdcraft/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "../crowdcraft/src/**/*"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
